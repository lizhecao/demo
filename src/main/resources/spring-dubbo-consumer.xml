<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
  <!--<context:component-scan base-package="com.test.demo.dubbo.server"/>-->

  <!-- 消费方应用名，用于计算依赖关系 -->
  <dubbo:application name="demo-consumer"/>

  <!-- 通过zookeeper发现服务地址 -->
  <dubbo:registry address="zookeeper://192.168.98.129:2182"/>

  <!-- 生成远程服务代理，可以像调用本地bean一样使用demoService -->
  <dubbo:reference id="demoService" interface="com.test.demo.dubbo.DemoService"/>
</beans>